# Media Keys

XF86Audio{Raise,Lower}Volume
	amixer sset Master {3000+,3000-} unmute

XF86AudioMute
	amixer sset Master toggle

XF86MonBrightness{Up,Down}
	xbacklight {+,-}7

# Fake Shourtcuts

super + ctrl + Right
    ~/.bin/portrait-toggle

super + p
	~/.bin/lock

super + bracket{right,left}
	{slide-wallpaper,mode-wallpaper}

super + d
	sudo s2disk

super + v
	~/.scripts/shadows.sh

# Applications

super + Return
	~/.bin/terminal

super + space
	rofi -show run

super + Tab
    rofi -show window

super + e
    emoji-select

super + Escape
	pkill -USR1 -x sxhkd

super + b
	~/.scripts/toggle-bar.sh


# BSPWM Specific

super + z
	~/.scripts/toggle-stickies.sh

super + a
	bspc node -g hidden

super + shift + a
	bspc node {,$(bspc query -N -n .hidden | tail -n1)} -g hidden=off

super + shift + r
	bspc wm -r

super + shift + q
	~/.scripts/exit-bspwm.sh

super + {_,shift + }w
	bspc node -{c,k}

super + m
	bspc desktop -l next

super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

super + x
	bspc node -g sticky

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f  {next,prev}.local

super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

super + alt + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + alt + shift + {l,k,j,h}
	bspc node -z {right 20 0,top 0 -20,bottom 0 +20,left -20 0}

super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

super + alt + {Left,Down,Up,Right}
    bspc node -p {west,south,north,east}

super + {semicolon,apostrophe}
    ~/.scripts/gap.sh {-2,+2}

super + slash
    ~/.scripts/toggle-radius.sh

super + {_,shift + }period
    ~/.scripts/border-{width,radius}.sh +1

super + {_,shift + }comma
    ~/.scripts/border-{width,radius}.sh -1
