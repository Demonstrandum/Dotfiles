#!/bin/zsh

BATTS=(${(f)"$(acpi -b | awk '{ $1=$2=""; print $0 }')"})
DISCHARGING="$(echo $BATTS[1] | grep 'Discharging')"

[[ -z "$DISCHARGING" ]] && exit

BAT0=$BATTS[1]
BAT1=$BATTS[2]

TIME0="$(echo $BAT0 | awk '{print $3}' | awk -F: '{ print ($1 * 3600) + ($2 * 60) + $3 }')"
TIME1="$(echo $BAT1 | awk '{print $3}' | awk -F: '{ print ($1 * 3600) + ($2 * 60) + $3 }')"
TIMETOT=$(( $TIME0 + $TIME1 ))

